# Verify the spelling of an svn commit
# Usage: spellcommit <repo> <commit number>
spellcommit() {
    diff=/tmp/$RANDOM.diff
    svn diff -c $2 $1 | grep '^+' | grep -v '^+++' > $diff
    scspell $diff
    \rm $diff
}
# Usage: fixspelling . <typo> <fix>
fixspelling() {
    while IFS= read -r -d $'\0' file; do
        echo "Updating $file"
        sed -i "s/$2/$3/g" "$file"
    done < <(rgrep -IilZ "$2" "$1")
}

